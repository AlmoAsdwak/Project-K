<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_K.Views.RozvrhPage"
             xmlns:data="clr-namespace:Project_K.Services"
             Title="Rozvrh"
             BackgroundColor="Black">
    <RefreshView x:Name="RozvrhRefresh">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ScrollView Grid.Row="1">
                <StackLayout Orientation="Vertical"  Padding="20,24,30,24" Spacing="10">
                    <Label x:Name="Day" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" TextColor="White" FontSize="Title"/>
                    <CollectionView Margin="12,0,0,0" x:Name="RozvrhCollectionView" Background="Black" ItemsSource="{x:Static data:GetRozvrh.Rozvrh}" ItemTemplate="{StaticResource Rozvrh}"/>
                </StackLayout>
            </ScrollView>
        </Grid>
    </RefreshView>
</ContentPage>
